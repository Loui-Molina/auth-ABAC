    {
      "name": "3. Attribute Auth (Bonus)",
      "item": [
        {
          "name": "Get Profile (As Manager) - See Email, No Salary",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Email should be present\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property(\"email\");",
                  "});",
                  "pm.test(\"Salary should NOT be present\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.not.have.property(\"salary\");",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{manager_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/users/{{target_user_id}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "users",
                "{{target_user_id}}"
              ]
            }
          },
          "response": []
        },
